                  <Font name="Arial" size="14.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Label>
            <Button fx:id="logoutButton" graphicTextGap="2.0" mnemonicParsing="false" onAction="#handleLogOut" prefHeight="25.0" prefWidth="100.0" text="Logout" textAlignment="CENTER">
